<% include header %>
  <!-- End of Navigation Bar -->
    <div class="page-header text-center">
        <h1><span class="glyphicon glyphicon-anchor"></span> Update Profile</h1>
    </div>
    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="container">
         <div class="jumbotron text-center">
            <div class="well">
                <h3><span class="glyphicon glyphicon-pencil"></span> Add / Update Information</h3>

                    <p>
                      <form action="/update" method="post">

                      <div class="form-group">
                          <label>Email</label>
                          <input type="text" class="form-control" name="email" value = <%= user.email %> >
                      </div>


                        <div class="form-group">
                            <label>Phone Number</label>
                            <input type="text" class="form-control" name="number" value = <%= user.number %> >
                        </div>

                            <button type="submit" class="btn btn-warning btn-lg">Update</button>
                            <a href="app/profile" class="btn btn-warning btn-lg">Back</a>

                      </form>

                    </p>

            </div>
        </div>

    </div>
  </div>
</body>
</html>
