<% if (user.role === 'Teacher') { %>
    <% include ../teacher/header %>
<% } else if (user.role === 'Parent'){ %>
    <% include ../parent/header %>
<% } else{ %>
   <% include ../admin/headerAttendance %>
<% } %>

    <div class="jumbotron text-center">
        <h1><span class="glyphicon glyphicon-education"></span> Attendnace System </h1>
        <!-- show any messages that come back with authentication -->
        <% if (message.length> 0) { %>
            <div class="alert alert-danger">
                <%= message %>
            </div>
            <% } %>

                <h3 id="<%= studentID %>"><%=studentName %></h3>
    </div>
    <div class="span7 text-center">

        <div class='container'>
            <div class='row'>
                <div id="todayClassList">
                    <h2 class='attendanceHeaders'>Today's Attendance Records</h2>
                    <button type="button" class="btn btn-primary" id='todayAttendanceButton' name='Hide' value='Hide'>Hide Records</button>
                    <div id='todayAttendance' style="display:block;">
                        <table id='todayTable' class="table table-striped table-bordered" cellspacing="0" width="100%">
                            <thead>
                                <th>#</th>
                                <th>Subject Name <span class="glyphicon glyphicon-tree-conifer"></th>
                                <th>Subject Time <span class="glyphicon glyphicon-tree-conifer"></th>
                                <th>Teacher Name <span class="glyphicon glyphicon-envelope"></th>
                                <th>Status <span class="glyphicon glyphicon-hand-right"></th>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class='container'>
            <div class='row'>
                <div id="weekClassList">
                    <h2 class='attendanceHeaders'>Week's Attendance Records</h2>
                    <button type="button" class="btn btn-primary" id='weekAttendanceButton' name='Hide' value='Hide'>Show Records</button>
                    <div id='weekAttendance' style="display:none;">
                        <table id='weekTable' class="table table-striped table-bordered" cellspacing="0" width="100%">
                            <thead>
                                <th>#</th>
                                <th>Subject Name <span class="glyphicon glyphicon-tree-conifer"></th>
                                <th>Subject Time <span class="glyphicon glyphicon-tree-conifer"></th>
                                <th>Teacher Name <span class="glyphicon glyphicon-envelope"></th>
                                <th>Status <span class="glyphicon glyphicon-hand-right"></th>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class='container'>
            <div class='row'>
                <div id="monthClassList">
                    <h2 class='attendanceHeaders'>Month's Attendance Records</h2>
                    <button type="button" class="btn btn-primary" id='monthAttendanceButton' name='Hide' value='Hide'>Hide Records</button>
                    <div id='monthAttendance' style="display:none;">
                        <table id='monthTable' class="table table-striped table-bordered" cellspacing="0" width="100%">
                            <thead>
                                <th>#</th>
                                <th>Subject Name <span class="glyphicon glyphicon-tree-conifer"></th>
                                <th>Subject Time <span class="glyphicon glyphicon-tree-conifer"></th>
                                <th>Teacher Name <span class="glyphicon glyphicon-envelope"></th>
                                <th>Status <span class="glyphicon glyphicon-hand-right"></th>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>

  <h2>Useful Information</h2>
    <button type="button" class="btn btn-primary" id='graphAttendanceButton' name='Hide' value='Hide'>Show Records</button>
      <div id='graphAttendance' style="display:none;">
    <h4>Attendance Across All Classes</h4>
<div class='container'>
  <div class="row">
    <canvas id="myChart" width="800" height="400"></canvas>
  </div>
    <h4>Total Count of Present, Late and Absent.</h4>
<div class='container'>
  <div class="row">
    <canvas id="pieChart" width="800" height="400"></canvas>
  </div>
</div>
  <h4>Find Attendance Information Per Class</h4>
<div class='container'>
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
            <form class="form" id='getGraphUniqueClass' role="search">
                <div class="input-group stylish-input-group">
                    <input type="text" class="form-control" id='typeaheadGraph' data-provide="typeahead" placeholder="Search" name="q" autocomplete="off">
                    <span class="input-group-addon">
                        <button type="submit">
                            <span class="glyphicon glyphicon-search"></span>
                        </button>

                    </span>
                </div>
              </form>
                <div class='paddingTop'></div>
        </div>
        <canvas id="searchClass" width="800" height="400"></canvas>
  </div>
</div>
</div>
</div>
</div>
<script type="text/javascript" src="/javascript/parent/attendance.js"></script>
</body>
</html>
