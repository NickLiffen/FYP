<% include header %>
  <!-- End of Navigation Bar -->

  <div class="jumbotron text-center">
      <h1><span class="glyphicon glyphicon-home"></span> Teacher Page</h1>

      <!-- show any messages that come back with authentication -->
      <% if (message.length > 0) { %>
          <div class="alert alert-danger"><%= message %></div>
      <% } %>

      <p>Your Options are Listed Below:</p>
  </div>
  <div class='center' id='hide'>
    <div class="alert alert-success">Teacher Successfully Deleted</div>
  </div>
  <div class="modal fade" id="confirm-delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">

                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModalLabel">Confirm Delete</h4>
                </div>

                <div class="modal-body">
                    <p>You are about to delete one track, this procedure is irreversible.</p>
                    <p>Do you want to proceed?</p>
                    <p class="debug-url"></p>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <a id='confirmDelete' class="btn btn-danger btn-ok">Delete</a>
                </div>
            </div>
        </div>
    </div>

  <!-- Sends the View Parents and Add Parents navigation to the page -->
  <div class="btn-group btn-group-justified" role="group" aria-label="...">
    <div class="btn-group" role="group">
      <button type="button" class="btn btn-default" id='viewTeacher'>View Teachers</button>
    </div>
    <div class="btn-group" role="group">
      <button type="button" class="btn btn-default" id='addTeacher'>Add Teachers</button>
    </div>
  </div>

<!-- Add a Teacher Section -->
  <div class="container">
    <div class="row">
<div class="hideAddTeacherForm">
<section id='addTeacherForm'>
  <h2>Add Teacher</h2>
    <form id'addTeacherForm' action="/pupil" method="post">
    <fieldset class="form-group">
        <label for="InputTitle">Teacher Title</label>
        <input type="text" name="TeacherTitle" class="form-control" id="TeacherTitle" placeholder="Enter Title" autofocus>
    </fieldset>
    <fieldset class="form-group">
        <label for="InputFname">Teacher First Name</label>
        <input type="text" name="TeacherFName" class="form-control" id="TeacherFName" placeholder="Enter First Name">
    </fieldset>
    <fieldset class="form-group">
        <label for="InputLname">Teacher Last Name</label>
        <input type="text" name="TeacherLName" class="form-control" id="TeacherLName" placeholder="Enter Last Name">
    </fieldset>
    <fieldset class="form-group">
        <label for="InputEmail">Teacher Email</label>
        <input type="email" name="TeacherEmail" class="form-control" id="TeacherEmail" placeholder="Enter Email">
    </fieldset>
    <fieldset class="form-group">
        <label for="InputMobileNumber">Teacher Mobile Number</label>
        <input type="text" name="TeacherMobileNumber" class="form-control" id="TeacherMobileNumber" placeholder="Enter Mobile Number">
    </fieldset>
    <fieldset class="form-group">
        <label for="InputUsername">Teacher Username</label>
        <input type="text" name="TeacherUsername" class="form-control" id="TeacherUsername" placeholder="Enter Username">
    </fieldset>
    </fieldset>
    <fieldset class="form-group">
        <label for="InputPassword">Teacher Password</label>
        <input type="text" name="TeacherPassword" class="form-control" id="TeacherPassword" placeholder="Enter Password">
    </fieldset>
    <p>Everything marked with a * is a mandatory field</p>
    <button type="submit" id="addTeacherForm" name="addTeacherForm" class="btn btn-primary">Submit</button>
      <div id="addTeacherstatus"></div>
  </form>
  </section>
</div>
</div>
</div>

<!-- View Teacher's Section -->
<div class="container">
  <div class="row">
<div class="hideViewTeacherList">
<section class='alignLeft' id='viewTeachers'>
  <!-- This is the DIV where all the dtudent data is going -->
  <div id='showAllTeacher'></div>
    <div id="TeacherList">
      <table class="table table-bordered">
        <thead>
          <th>#</th>
          <th>Teacher Name</th>
          <th>Teacher Email</th>
          <th>Profile</th>
          <th>Update</th>
          <th>Delete</th>
        </thead>
        <tbody></tbody>
      </table>
    </div>
</section>
</div>
</div>
</div>

<!-- Add a Teacher Section -->
<div class="container">
  <div class="row">
<div class="hideUpdateTeacherForm" style="display:none;">
<section id='updateTeacherForm'>
  <h2>Add Teacher</h2>
    <form id'updateTeacherForm' action="/pupil" method="post">
    <fieldset class="form-group">
        <label for="InputTitle">Teacher Title</label>
        <input type="text" name="TeacherTitleUpdate" class="form-control" id="TeacherTitleUpdate" placeholder="Enter Title" autofocus>
    </fieldset>
    <fieldset class="form-group">
        <label for="InputFname">Teacher First Name</label>
        <input type="text" name="TeacherFNameUpdate" class="form-control" id="TeacherFNameUpdate" placeholder="Enter First Name">
    </fieldset>
    <fieldset class="form-group">
        <label for="InputLname">Teacher Last Name</label>
        <input type="text" name="TeacherLNameUpdate" class="form-control" id="TeacherLNameUpdate" placeholder="Enter Last Name">
    </fieldset>
    <fieldset class="form-group">
        <label for="InputEmail">Teacher Email</label>
        <input type="email" name="TeacherEmailUpdate" class="form-control" id="TeacherEmailUpdate" placeholder="Enter Email">
    </fieldset>
    <fieldset class="form-group">
        <label for="InputMobileNumber">Teacher Mobile Number</label>
        <input type="text" name="TeacherMobileNumberUpdate" class="form-control" id="TeacherMobileNumberUpdate" placeholder="Enter Mobile Number">
    </fieldset>
    <fieldset class="form-group">
        <label for="InputUsername">Teacher Username</label>
        <input type="text" name="TeacherUsernameUpdate" class="form-control" id="TeacherUsernameUpdate" placeholder="Enter Username">
    </fieldset>
    </fieldset>
    <p>Everything marked with a * is a mandatory field</p>
    <button type="submit" id="addTeacherFormUpdate" name="addTeacherFormUpdate" class="btn btn-primary">Submit</button>
      <div id="updateTeacherstatus"></div>
  </form>
  </section>
</div>
</div>
</div>
<script type="text/javascript" src="/javascript/admin/teacher.js"></script>


</body>
</html>
