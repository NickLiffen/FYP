<% if (user.role === 'Teacher') { %>
    <% include teacher/header %>
<% } else if (user.role === 'Parent'){ %>
    <% include parent/header %>
<% } else{ %>
   <% include admin/header %>
<% } %>

<div class="jumbotron text-center">
    <h1>Contact Form<span class="glyphicon glyphicon-info-sign"></span></h1>
    <!-- show any messages that come back with authentication -->
    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>
</div>
<div id='contactState'></div>
<div class="container">
    <div class="row">
      <form class="cotactForm" id='contactForm' method="post">
      <fieldset class="form-group">
        <label class="col-sm-2 form-control-label">Your Name</label>
        <div class="col-sm-10">
          <p class="form-control-static"><%= user.name %></p>
        </div>
        </fieldset>
      <fieldset class="form-group">
        <label class="col-sm-2 form-control-label">Your Email</label>
        <div class="col-sm-10">
          <p class="form-control-static"><%= user.email %></p>
        </div>
      </fieldset>
      <fieldset class="form-group">
        <label class="col-sm-2 form-control-label">You are contacting: </label>
        <div class="col-sm-10">
          <p id='name' class="form-control-static"><%= contactName %></p>
        </div>
      </fieldset>
      <fieldset class="form-group">
        <label class="col-sm-2 form-control-label">Their Email Address is: </label>
        <div class="col-sm-10">
          <p id='email'class="form-control-static"><%= contactEmail %></p>
        </div>
      </fieldset>
      <fieldset class="form-group">
        <label class="col-sm-2 form-control-label">Their Mobile Number is: </label>
        <div class="col-sm-10">
          <p id='number'class="form-control-static"><%= contactNumber %></p>
        </div>
      </fieldset>
      <fieldset class="form-group">
        <label for="inputPassword" class="col-sm-2 form-control-label">Please Enter Your Message</label>
        <div class="col-sm-10">
        <textarea class="form-control" id="message" rows="3"></textarea>
        </div>
      </fieldset>
        <div class="col-md-6">
      <button type="submit" id='Text' class="btn btn-primary">Send as Text</button>
        </div>
        <div class="col-md-6">
      <button type="submit" id='Email'  class="btn btn-primary">Send as Email</button>
        </div>
        </form>
    </div>
</div>

</div>
<script type="text/javascript" src="/javascript/contact.js"></script>
</body>
</html>
