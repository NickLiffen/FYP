<% include header %>
  <!-- End of Navigation Bar -->

  <div class="jumbotron text-center">
      <h1><span class="glyphicon glyphicon-calendar"></span> Your Timetable </h1>
      <!-- show any messages that come back with authentication -->
      <% if (message.length > 0) { %>
          <div class="alert alert-danger"><%= message %></div>
      <% } %>
  </div>

<div id='calendarEffect'>
<div id='calendar'></div>
</div>

<div id='attendanceEffect'>
  <div id ='paddingBottom' class="text-center"><button id="hideAttendance" name="hideAttendance" class="btn btn-primary">Back to Timetable!</button></div>
    <div class='bottom'></div>
    <form id='takeAttendance' action="/takeAttendance" method="post">
    <div id="ClassList">
      <table class="table table-bordered">
        <thead>
          <th>#</th>
          <th>Student Name</th>
          <th>Present</th>
          <th>Late</th>
          <th>Absent</th>
          <th>Profile</th>
        </thead>
    </table>
  <div id ='paddingBottom 'class="text-center"><button type="submit" id="takeAttendance" name="takeAttendance" class="btn btn-success">Save!</button></div>
  <div id='attendanceStatus'><div>
  </div>
  </form>
</div>

<script type="text/javascript" src="/javascript/teacher/timetable.js"></script>
</body>
</html>
